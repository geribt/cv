---
import Layout from '../layouts/Layout.astro';

import cv from '../data/data.json';


---

<Layout title="Temps lliure">

    <style>

        #carouselExample{
            width: 500px;
            height: 350px;
            max-width: 500px;
            vertical-align: middle;
        }

        .carousel-item img{
            width: 500px;
            height: 350px;
            max-width: 500px;
        }
    </style>

	<h1>Coses que m'agrada fer</h1>

    <div class="d-flex justify-content-center mt-5">
    <div id="carouselExample" class="carousel slide">
        <div class="carousel-inner">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 4"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="4" aria-label="Slide 5"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="5" aria-label="Slide 6"></button>
            </div>
          <div class="carousel-item active">
            <img src="./img/pastisformatge.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5>{cv.aficions[0]}</h5>
              </div>
          </div>
          <div class="carousel-item">
            <img src="./img/viatjar.png" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5>{cv.aficions[1]}</h5>
              </div>
          </div>
          <div class="carousel-item">
            <img src="./img/videojocs.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5>{cv.aficions[2]}</h5>
              </div>
          </div>
          <div class="carousel-item">
            <img src="./img/amics.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5>{cv.aficions[3]}</h5>
              </div>
          </div>
          <div class="carousel-item">
            <img src="./img/cinema.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5>{cv.aficions[4]}</h5>
              </div>
          </div>
          <div class="carousel-item">
            <img src="./img/competir.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h5>{cv.aficions[5]}</h5>
              </div>
          </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
      </div>

	
</Layout>